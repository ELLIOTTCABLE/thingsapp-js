{
   "$schema": "https://json.schemastore.org/tsconfig",

   "compilerOptions": {
      "strict": true,
      "target": "es2023",
      "module": "nodenext",

      "noEmit": true,
      "declaration": true,
      "declarationMap": true,
      "inlineSourceMap": true,

      "importHelpers": true,
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "forceConsistentCasingInFileNames": true
   }
}
